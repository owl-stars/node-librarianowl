#!/usr/bin/env node

var argv = require('optimist')
  .usage('Generates Less, Sass/Scss & Stylus libraries defined through YAML..\nUsage: $0')
  .describe('s', 'Source folder')
    .alias('s', 'source')
    .demand('s')
  .describe('o', 'Output folder')
    .alias('o', 'output')
    .demand('o')
  .describe('t', 'Template file')
    .alias('t', 'template')
  .argv

var options = {}
if (argv.template) options.template = argv.template;
require('../').library(argv.source, argv.output, options);
